<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:style>
	.formElement {
		display: block;
		margin: 5px
	}

	.loadingSpinner {
		margin: 15px;
	}
	</ui:style>

	<ui:with field='res' type='org.wte4j.ui.client.Wte4jResources' />
	<b.gwt:HTMLPanel>
		<b.gwt:FormPanel ui:field="formPanel" >
			<b.gwt:FlowPanel ui:field="flowPanel">
				<g:Hidden ui:field="templateName" name="name" />
				<g:Hidden ui:field="templateLanguage" name="language" />
				<g:FileUpload ui:field="fileUpload" name="file"
					styleName="{style.formElement}" />
				<b:Image ui:field="loadingSpinner" resource="{res.spinner}"
					visible="false" styleName="{style.loadingSpinner}" />
				<b:Button ui:field="submitButton" type="PRIMARY"
					marginRight="5" marginLeft="5" />
				<b:Button ui:field="cancelButton" />
			</b.gwt:FlowPanel>
		</b.gwt:FormPanel>
	</b.gwt:HTMLPanel>
</ui:UiBinder> 